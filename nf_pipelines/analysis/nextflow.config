workDir = "$HOME/Doctorate/nextflow_workdirs/nextflow_fasta"
dataDir = "$HOME/Doctorate/data_directory"

///////////////////////
// DENOVO PARAMETERS //
///////////////////////
params.add_denovo = true
params.denovo_engine = "Casanovo4.2.0"


//////////////////////
// INPUT FILE PATHS //
//////////////////////
params.denovo_files = "$dataDir/denovo_project/denovo_results/psmlists/df/*.csv"
params.spectrum_files = "$dataDir/denovo_project/mgf_filtered/S*.mgf"
params.sage_config = "$HOME/Doctorate/DeNovo_Benchmark/configs/sage/denovo_fasta_ablation.json"
params.fasta_dir = "$dataDir/fasta/del_*.fasta"


///////////////////////
// OUTPUT FILE PATHS //
///////////////////////
params.search_dir = "$dataDir/denovo_project/search_results"
params.store_fasta = "$dataDir/fasta/denovo"

/////////////////////////
// SETTINGS FOR SEARCH //
/////////////////////////
params.path_search_module = "$HOME/Doctorate/utility_scripts/search/sage_search.nf"

params.quant = "lfq"

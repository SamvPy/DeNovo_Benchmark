conda.enabled = true
params.conda_env_dir = "$HOME/miniconda3/envs"

///////////////////
// IO PARAMETERS //
///////////////////

/* 
 * Root output directory of de novo results. 
 * The results from an engine are stored in a folder
 * named as the name of the tool.
 */ 


// Path to model checkpoints and configurations
// See 'Tool parameters' for specific paths
root_checkpoints = "$HOME/Doctorate/data_directory/denovo_project/checkpoints"
root_configs = "$HOME/Doctorate/DeNovo_Benchmark/configs"
root_results = "$HOME/Doctorate/data_directory/tests"

params.maxforks_tool = 1 // How many files to parallelize for each tool

// OUTPUT

params.outdir_raw = "$root_results/denovo_output" // output sequencers
params.outdir_spectralis = "$root_results/spectralis" // output rescored results


/////////////////////
// Tool parameters //
/////////////////////

// CASANOVO
params.model_path_casanovo = "$root_checkpoints/casanovo/casanovo_massivekb.ckpt"
params.config_casanovo = "$root_configs/casanovo/casanovo.yaml"

// INSTANOVO
params.model_path_instanovo_diffusion = "$root_checkpoints/instanovo/diffusion_checkpoint"

params.model_path_instanovo = "$root_checkpoints/instanovo/instanovo.pt"
params.config_instanovo = "$root_configs/instanovo/config.yaml"

// CONTRANOVO
params.model_path_contranovo = "$root_checkpoints/ContraNovo/ControNovo.ckpt"
params.config_contranovo = "$root_configs/contranovo/config.yaml"

// NOVOB
params.model_path_novob = "$root_checkpoints/NovoB/usingGraphNovoDataset/GNovo/"

// PEPNET
params.model_path_pepnet = "$root_checkpoints/PepNet/model.h5"

// SPECTRALIS
params.config_spectralis = "$root_configs/spectralis/spectralis_config.yaml"
conda.enabled = true

workDir = "/public/compomics3/Sam/nextflow_denovo_tools"

// USAGE //
// params.mgf_files = "/public/compomics3/Sam/PXD028735/QExactive/mgf_reformatted/*.mgf"

// TEST //

// Change the following three variables to the path you want:
// - root_results: Where the results will be stored
// - params.mgf_files: The input mgf files
// - params.serializer: The serializer file (empty file)

// OUTPUT FOLDER --> /denovo_output/*engine name*
root_results = "/public/compomics3/Sam/test_denovo"
// IN MGFs
params.mgf_files = "/public/compomics3/Sam/test_denovo/mgf_reformatted/*.mgf"

// PROCESSING INPUT RAW FILES
// params.mgf_files = "/public/compomics3/Sam/Ben_Neely_Query/mgf/*.mgf"

params.serializer = "/public/compomics3/Sam/config_files/denovo/serializer/serialize_dummy.txt"
params.serialize = false


// ACTIVATION VARIABLES
params.run_casanovo = true
params.run_instanovo = true
params.run_contranovo = true
params.run_pepnet = true
params.run_novob = true
params.run_smsnet = false // Not supported yet
params.run_pointnovo = false // Not supported yet
params.run_deepnovo = false // Not supported yet
params.run_powernovo = false // Not supported yet
params.run_pihelixnovo = true
params.run_piprimenovo = true
params.run_adanovo = true


// DO NOT CHANGE
params.outdir_raw = "$root_results/denovo_output" // Where the results form the de novo sequencers will be stored
params.outdir_spectralis = "$root_results/spectralis" // Where the spectralis post-processing results will be stored


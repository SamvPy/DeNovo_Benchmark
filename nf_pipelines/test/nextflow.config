conda.enabled = true

workDir = "/public/compomics3/Sam/nextflow_denovo_test"

config_directory = "/public/compomics3/Sam/config_files/denovo"
data_directory = "/public/compomics3/Sam/test_data"
checkpoint_directory = "/public/compomics3/Sam/denovo_checkpoints"

params.instanovo_plus_run_script = "/home/sam/DeNovo/cloned_denovo_repo/DeNovo_Benchmark/package/instanovo_scripts/run_instanovoplus.py"
params.result_root_dir = "/public/compomics3/Sam/test_data/results"

// GENERAL VARIABLES
// ACTIVATION VARIABLES
params.run_contranovo = true
params.run_novob = true
params.run_pepnet = true
params.run_casanovo = true
params.run_instanovo = true
params.run_graphnovo = false


params.run_instanovoplus = true
params.run_spectralis = true

// ENVIRONMENT
params.conda_env_dir = "$HOME/miniconda3/envs"

// FILES
params.mgf_files = "${data_directory}/test_mgf.mgf"
params.denovo_results_dir = "${data_directory}/results"
params.serializer = "${config_directory}/serializer/serialize_dummy.txt"
params.serialize = false


// CASANOVO VARIABLES
params.config_casanovo = "${config_directory}/casanovo/casanovo.yaml"
params.model_path_casanovo = "${checkpoint_directory}/casanovo/casanovo_massivekb.ckpt"


// INSTANOVO VARIABLES
params.config_instanovo = "${config_directory}/instanovo/config.yaml"
params.model_path_instanovo = "${checkpoint_directory}/instanovo/instanovo.pt"

// INSTANOVO PLUS VARIABLES
params.model_path_instanovo_diffusion = "${checkpoint_directory}/instanovo/diffusion_checkpoint"

// GRAPHNOVO VARIABLES
params.model_path_pathsearcher = "${checkpoint_directory}/GraphNovo/ckpt/GraphNovo_PathSearcher.pt"
params.model_path_seqfiller = "${checkpoint_directory}/GraphNovo/ckpt/GraphNovo_SeqFiller.pt"


// CONTRANOVO VARIABLES
params.config_contranovo = "${config_directory}/contranovo/config.yaml"
params.model_path_contranovo = "${checkpoint_directory}/ContraNovo/ControNovo.ckpt"


// NOVOB VARIABLES
params.model_path_novob = "${checkpoint_directory}/NovoB/usingGraphNovoDataset/GNovo/"
// params.model_path_novob_weights = ""


// PEPNET VARIABLES
params.model_path_pepnet = "${checkpoint_directory}/PepNet/model.h5"


// SPECTRALIS VARIABLES
params.config_spectralis = "${config_directory}/spectralis/spectralis_config.yaml"
params.spectralis_mode = "rescoring"


// REFINEMENT VARIABLES
params.result_files = "${data_directory}/results/casanovo/test_mgf.mztab"
params.denovo_engine = "casanovo"

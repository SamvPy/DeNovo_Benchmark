conda.enabled = true

path_to_project = "/home/samva/Doctorate/denovo_paper/DeNovo_Benchmark"
root_data = "/home/samva/Doctorate/denovo_paper/data"
workDir = "/home/samva/Doctorate/denovo_paper/workdir"

// GENERAL VARIABLES
// ENVIRONMENT
params.conda_env_dir = "$HOME/miniconda3/envs"
params.gpu_device = "cuda:0"

// FOLDERS AND VARIABLES
params.mgf_files = "$path_to_project/test_data/mgf/*.mgf"

// OUT path
params.denovo_results_dir = "$root_data/postprocessing"

// INSTANOVOPLUS
// params.denovo_engine = "sage"
// To edit instanovoplus configuration, edit the instanovoplus.yaml file in the configs/instanovo_v1/configs folder
params.config_instanovoplus = "$path_to_project/configs/instanovo_v1/configs"

// SPECTRALIS (INPUT PSMs)
// Here the to be reprocessed result files should be stored (the denovo_output folder)
params.result_root_dir = "$root_data/denovo_output"
params.denovo_engines = [
    "adanovo",
    "casanovo",
    "contranovo",
    "instanovo",
    "novob",
    "pepnet",
    "pihelixnovo",
    "piprimenovo",
]

// ACTIVATION VARIABLES
params.run_instanovoplus = true
params.run_spectralis = false


// INSTANOVO PLUS VARIABLES
// Only when running InstaNovo+ v0.1.0 or lower. Default v1 so these params dont do anything.
params.model_path_instanovo_diffusion = "/public/compomics3/Sam/denovo_checkpoints/instanovo/diffusion_checkpoint"
params.instanovo_plus_run_script = "/home/sam/DeNovo/cloned_denovo_repo/DeNovo_Benchmark/package_du/instanovo_scripts/run_instanovoplus.py"


// SPECTRALIS VARIABLES
params.config_spectralis = "$path_to_project/configs/spectralis/spectralis_config.yaml"
params.spectralis_mode = "ea" // 'ea' or 'rescoring'


params.raw_extension = "mgf"

executor {
    queueSize = 1
}